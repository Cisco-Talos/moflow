type json =
  [
  | `Null of unit (* using unit to turn Null into a boxed value *)
  | `Bool of bool
  | `Int of int64
  | `Uint of int64 (* big unsigned int64 *)
  | `Intlit of string
  | `Float of float
  | `Floatlit of string
  | `String of string
  | `Stringlit of string
  | `Assoc of (string * json) list
  | `List of json list
  ]

